/*
 * launcher/config.rasi - Launcher
 * Layout configuration for launcher applet
 * @author umutsevdi
 */

@import "../global.rasi"

configuration {
    font:                           "FiraSans 10";
    show-icons:                     true;
    icon-theme:                     "kora-green";
    display-drun:                   "";
    drun-display-format:            "{name}";
    disable-history:                false;
    sidebar-mode:                   false;
}

* {
    background-color:               @bg;
    text-color:                     @solid-fg;
}

window {
    transparency:                   "real";
    border-radius:                  @round;
    width:                          30%;
    location:                       north;
    x-offset:                       0;
    y-offset:                       0;
}

mainbox {
    background-color:               @bg;
    padding:                        0 2 5 2;
    border:                         0% 0% 0% 0%;
    border-color:                   @solid-focus;
    border-radius:                  @round-dropdown;
    children:                       [ inputbar, listview ];
}

listview {
    background-color:               @bg-none;
    columns:                        5;
    lines:                          3;
    spacing:                        2px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

inputbar {
    children:                       [ textbox-prompt-colon , entry ];
    spacing:                        0px;
    background-color:               @solid-focus;
    text-color:                     @solid-fg;
    margin:                         0.0;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    border-radius:                  0;
}

textbox-prompt-colon {
    font:                           @nerdfont;
    expand:                         false;
    str:                            " ï€‚ ";
    background-color:               @bg-none;
    text-color:                     @solid-fg-dark;
    font:                           "JetBrains Mono Nerd Font 10";
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    border-radius:                  0;
}

entry {
    font:                           "FiraSans 10";
    background-color:               @bg-none;
    text-color:                     @solid-fg-dark;
    placeholder-color:              @solid-fg-dark;
    expand:                         true;
    horizontal-align:               0.48;
    vertical-align:                 0.5;
    placeholder:                    "Search...";
    padding:                        2px 0px 2px 0px;
    blink:                          true;
}

element {
    background-color:               @solid-bg-dark;
    text-color:                     @fg;
    orientation:                    vertical;
    border-radius:                  @round-small;
    padding:                        1.25% 0% 1.25% 0%;
    margin:                         4px;
}

element-text {
    background-color:               @bg-none;
    text-color:                     inherit;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element-icon {
    background-color:               inherit;
    text-color:                     inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           48px;
    border:                         0px;
}

element selected {
    background-color:               @solid-focus;
    text-color:                     @solid-bg-dark;
    border:                         3px;
    border-radius:                  @round-small;
    border-color:                   @solid-focus;
}


